@model Grand.Plugin.Shipping.ShippingPoint.Models.ShippingPointModel
@using Grand.Framework;

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(Context.Request.Query["formId"])'].@(Context.Request.Query["btnId"]).click();}
        catch (e){}
        window.close();
    </script>
}

<div class="form-horizontal">
    <div class="form-body">
        <div class="form-group">
            @Html.GrandLabelFor(model => model.ShippingPointName)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.ShippingPointName)
                @Html.ValidationMessageFor(model => model.ShippingPointName)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.Description)
            <div class="col-md-9 col-sm-9">
                @Html.GrandTextAreaFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.CountryId)
            <div class="col-md-9 col-sm-9">
                @Html.GrandDropDownListFor(model => model.CountryId, Model.AvailableCountries)
                @Html.ValidationMessageFor(model => model.CountryId)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.City)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.Address1)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.Address1)
                @Html.ValidationMessageFor(model => model.Address1)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.ZipPostalCode)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.ZipPostalCode)
                @Html.ValidationMessageFor(model => model.ZipPostalCode)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.OpeningHours)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.OpeningHours)
                @Html.ValidationMessageFor(model => model.OpeningHours)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.PickupFee)
            <div class="col-md-9 col-sm-9">
                @Html.GrandEditorFor(model => model.PickupFee)
                @Html.ValidationMessageFor(model => model.PickupFee)
            </div>
        </div>
        <div class="form-group">
            @Html.GrandLabelFor(model => model.StoreId)
            <div class="col-md-9 col-sm-9">
                @Html.GrandDropDownListFor(model => model.StoreId, Model.AvailableStores)
                @Html.ValidationMessageFor(model => model.StoreId)
            </div>
        </div>
    </div>
</div>