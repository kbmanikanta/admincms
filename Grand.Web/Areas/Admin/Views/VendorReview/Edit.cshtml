@model VendorReviewModel
@using Grand.Core
@inject IWorkContext workContext
@{
    //page title
    ViewBag.Title = T("Admin.VendorReviews.EditVendorReviewDetails").Text;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light form-fit">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-cube"></i>
                        @T("Admin.VendorReviews.EditVendorReviewDetails")
                        <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("Admin.VendorReviews.BackToList").Text, "List")</small>
                    </div>
                    @if (workContext.CurrentVendor == null)
                    {
                        <div class="actions">
                            <div class="btn-group btn-group-devided">
                                <button class="btn btn-success" type="submit" name="save"><i class="fa fa-check"></i> @T("Admin.Common.Save") </button>
                                <button class="btn btn-success" type="submit" name="save-continue"><i class="fa fa-check-circle"></i> @T("Admin.Common.SaveContinue") </button>
                                <span id="vendorreview-delete" class="btn red"><i class="fa fa-trash-o"></i> @T("Admin.Common.Delete")</span>
                            </div>
                        </div>
                    }
                </div>
                <div class="portlet-body form">
                    @Html.Partial("_CreateOrUpdate", Model)
                </div>
            </div>
        </div>
    </div>


}
@Html.DeleteConfirmation("vendorreview-delete")